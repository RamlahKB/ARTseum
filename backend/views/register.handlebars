<div class="container mt-5 mb-5">
    <h1 class="text-center text-info">User Registration</h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="/userReg" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" value="{{name}}">
                        <div class="text-danger">{{err1}}</div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" value="{{email}}">
                        <div class="text-danger">{{err2}}</div>
                        <div class="text-danger">{{err4}}</div>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" value="{{password}}">
                        <div class="text-danger">{{err3}}</div>
                        <div class="text-danger">{{err5}}</div>
                    </div>
                    <div class="form-group">
                        <label>Gender</label><br>
                        <input type="radio" name="gender" value="female"><span class="ml-3">Female</span><br>
                        <input type="radio" name="gender" value="male"><span class="ml-3">Male</span><br>
                        <div class="text-danger">{{err6}}</div>
                    </div>
                    <div class="form-group">
                        <label>Contact</label>
                        <input type="number" class="form-control" name="contact" value="{{contact}}">
                        <div class="text-danger">{{err7}}</div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>